<% layout("/layouts/boilerplate.ejs") %>
<div class="row" style="padding: 5rem;">
    <h2 class="col-6 offset-3 mb-4" >SignUp on wanderLust</h2>
    <div class="col-6 offset-3">
   <form action="/user/signup" method="POST" novalidate class="needs-validation">

    <!-- //username -->
    <div class="mb-3">
        <label for="username" >Username : </label>
    <input type="text" 
    name="username" 
    id="username"
    class="form-control"
      required>
      <div class="valid-feedback">Looks Good!</div>
    </div>

    <!-- //email -->
    <div class="mb-3">
        <label for="email" >Email : </label>
    <input type="email" 
    name="email" 
    id="email"
    class="form-control"
      required>
    </div>


    <!-- //password -->
    <div class="mb-3">
        <label for="password" >Password : </label>
    <input type="password" 
    name="password" 
    id="password"
    class="form-control"
      required>
      <div class="valid-feedback">Looks Good!</div>
    </div>
    <button class="btn btn-outline-success">signup</button>
   </form>
        </div>
        </div>
